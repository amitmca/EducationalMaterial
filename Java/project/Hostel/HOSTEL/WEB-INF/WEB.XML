<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
                   


<servlet>
	<servlet-name>hostelinfo</servlet-name>
	<servlet-class>servlet</servlet-class>
                  <init-param>
		<param-name>ipaddr</param-name>
		<param-value>http://127.0.0.1:8080/hostel/</param-value>
	</init-param>
</servlet>

<servlet-mapping>
	<servlet-name>hostelinfo</servlet-name>
	<url-pattern>/hostel</url-pattern>
</servlet-mapping>
</web-app>